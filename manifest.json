{
  "name": "COVID-Free Browsing",
  "version": "0.1",
  "description": "CF Browsing attempts to hide any COVID-19 related content to allow more peace while surfing the internet",
  "permissions": ["activeTab", "storage"], 
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "manifest_version": 2
}
